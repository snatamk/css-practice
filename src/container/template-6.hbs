<header class="header">
  {{> big}}
  <nav class="header_nav">
    <div class="header_nav_right">
       {{>  nav list=header}}
    </div>
  </nav>
</header>

<main class="main">
  <div class="main_info">
    {{#with info}}
     <h1 class="info_title"> {{title}} </h1>
     <p class="info_description"> {{description}} </p>
    {{/with}}
  </div>

   {{#with form}}
  <form class="form">
    <div class="form_input_list">
      {{#each inputs}}
      <input type="{{type}}" placeholder="{{placeholder}}" 
      class="form_input" name="{{name}}" id="form-input-{{id}}"/>
      {{/each}}
    </div>
    <div class="form_checkdox">
     <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}" />
     <div></div>
     <label for="{{checkbox.name}}"> {{checkbox.label}} </label>
    </div>
    <button type="submit" class="form_button"> {{button}} </button>
    <p class="form_info"> {{info}} </p>
  </form>
 {{/with}}
</main>

{{#with updates}}
<section class="updates">
   <div class="update">
     <h3 class="update_title"> {{title}} </h3>
   {{#each list}}
   <div class="update_list">
     <div class="update_color {{#if @first}}color_blue{{/if}} {{#if @last}}color_purple{{/if}}">
     <span class="span">32x32</span>
     </div>
      <div>
        <p class="upd_nickname"> @{{nickname}} </p>
        <p class="upd_description"> {{description}} </p>
      </div>
   </div>
   {{/each}}
   {{#with show_all}}
   <a href="{{url}}" class="update_link"> {{text}} </a>
   {{/with}}
   </div>
</section>
 {{/with}}

<section class="expirience">
  {{#with expirience}}
    <h2 class="expirience_title"> {{title}} </h2>
    <span class="expirience_badge"> {{badge}} </span>
  <div class="list">
    {{#each list}}
      <div>
        <strong> {{name}} </strong>
        <p> {{details}} </p>
      </div>
    {{/each}}
  </div>
  {{/with}}
</section>

<footer class=" footer">
  <div>
    {{> big}}
    <span class='footer_copyright'> (c) 2023 </span>
  </div>
  {{#each footer}}
    <div>
      <span class="footer_title"> {{title}} </span>
      {{> nav list=links isVertical=true}}
    </div>
  {{/each}}
</footer>